<div id="<%= dom_id post %>" class="bg-white rounded-lg shadow-md p-6 mb-4">
  <div class="flex justify-between items-start mb-4">
    <h2 class="text-2xl font-semibold text-gray-800 hover:text-blue-600 transition-colors duration-200">
      <%= link_to post.title, post %>
    </h2>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_post_path(post), class: "text-blue-500 hover:text-blue-700" %>
      <%= button_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
    </div>
  </div>

  <div class="text-gray-600 text-sm mb-3">
    By <span class="font-medium"><%= post.user.name %></span> on <%= post.created_at.strftime("%B %d, %Y") %>
  </div>

  <div class="prose max-w-none mb-4">
    <p class="text-gray-700 leading-relaxed"><%= truncate(post.body, length: 200) %></p>
  </div>

  <div class="text-right">
    <%= link_to "Read more", post, class: "text-blue-500 hover:underline" %>
  </div>
</div>
