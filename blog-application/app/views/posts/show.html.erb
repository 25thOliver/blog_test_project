<div class="container mx-auto px-4 my-8">
  <div class="flex justify-between items-center mb-6">
    <%= link_to "Back to Posts", posts_path, class: "text-blue-500 hover:text-blue-700 font-bold" %>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_post_path(@post), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-4"><%= @post.title %></h1>
    <div class="text-gray-600 text-sm mb-4">
      By <span class="font-medium text-gray-800"><%= @post.user.name %></span> on <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
    <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed mb-6">
      <%= simple_format(@post.body) %>
    </div>
  </div>

  <hr class="my-8 border-gray-300">

  <div class="space-y-6">
    <h2 class="text-2xl font-bold text-gray-800">Comments (<%= @post.comments.count %>)</h2>

    <turbo-frame id="new_comment">
      <%= render "comments/form", post: @post, comment: @comment %>
    </turbo-frame>

    <turbo-frame id="comments">
      <%= render "comments/comments", comments: @post.comments %>
    </turbo-frame>
  </div>
</div>
